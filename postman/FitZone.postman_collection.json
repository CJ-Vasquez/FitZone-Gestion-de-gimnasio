{
  "info": {
    "name": "FitZone API Collection",
    "description": "Colecci칩n completa de endpoints REST para el sistema FitZone",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080", "type": "string" },
    { "key": "token", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "游댏 Auth Service",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/register",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@fitzone.pe\",\n  \"password\": \"test123\",\n  \"role\": \"MEMBER\"\n}" }
          }
        },
        {
          "name": "Login",
          "event": [{ "listen": "test", "script": { "exec": ["var res = pm.response.json();", "pm.collectionVariables.set('token', res.token);"] } }],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}" }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/auth/users",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/auth/users/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"role\": \"TRAINER\",\n  \"enabled\": true\n}" }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/auth/users/2",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "游논 Member Service",
      "item": [
        {
          "name": "Get All Members",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/members",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Get Member by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/members/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Create Member",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/members",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"firstName\": \"Carlos\",\n  \"lastName\": \"Mendoza\",\n  \"email\": \"carlos.mendoza@email.com\",\n  \"phone\": \"999888777\",\n  \"dni\": \"55667788\",\n  \"planId\": 1\n}" }
          }
        },
        {
          "name": "Update Member",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/members/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"911222333\",\n  \"status\": \"ACTIVE\"\n}" }
          }
        },
        {
          "name": "Delete Member",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/members/3",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "游늶 Plan Service",
      "item": [
        {
          "name": "Get All Plans",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/plans",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Get Active Plans",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/plans?activeOnly=true",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Create Plan",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/plans",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Plan Premium\",\n  \"description\": \"Acceso completo + entrenador personal\",\n  \"price\": 200.00,\n  \"durationDays\": 30,\n  \"active\": true\n}" }
          }
        },
        {
          "name": "Update Plan",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/plans/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"price\": 85.00,\n  \"active\": true\n}" }
          }
        },
        {
          "name": "Delete Plan",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/plans/4",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "游늰 Attendance Service",
      "item": [
        {
          "name": "Get All Attendance",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/attendance",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Get Attendance by Member",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/attendance/member/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Check In",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/attendance/checkin",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"memberId\": 1,\n  \"observation\": \"Sesi칩n de cardio\"\n}" }
          }
        },
        {
          "name": "Update Attendance (Check-out)",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/attendance/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"checkOut\": \"2026-03-15T18:30:00\",\n  \"observation\": \"Sesi칩n completada\"\n}" }
          }
        },
        {
          "name": "Delete Attendance",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/attendance/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "游눱 Payment Service",
      "item": [
        {
          "name": "Get All Payments",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/payments",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Get Payments by Member",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/payments/member/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Register Payment (triggers RabbitMQ)",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/payments",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"memberId\": 2,\n  \"planId\": 1,\n  \"amount\": 80.00,\n  \"paymentMethod\": \"YAPE\",\n  \"notes\": \"Pago mensual plan b치sico\"\n}" }
          }
        },
        {
          "name": "Update Payment Status",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/payments/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"status\": \"CONFIRMED\",\n  \"notes\": \"Confirmado manualmente\"\n}" }
          }
        },
        {
          "name": "Delete Payment",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/payments/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    }
  ]
}
