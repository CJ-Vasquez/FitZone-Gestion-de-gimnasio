{
  "info": {
    "name": "FitZone API - Coleccion Completa",
    "description": "Coleccion completa de endpoints REST para el sistema FitZone - Gestion de Gimnasio",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080", "type": "string" },
    { "key": "token", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Autenticacion",
      "item": [
        {
          "name": "Registrar Usuario",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/register",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@fitzone.pe\",\n  \"password\": \"test123\",\n  \"role\": \"MIEMBRO\"\n}" }
          }
        },
        {
          "name": "Iniciar Sesion",
          "event": [{ "listen": "test", "script": { "exec": ["var res = pm.response.json();", "pm.collectionVariables.set('token', res.token);"] } }],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}" }
          }
        },
        {
          "name": "Obtener Todos los Usuarios",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/auth/users",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Actualizar Usuario",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/auth/users/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"role\": \"ENTRENADOR\",\n  \"habilitado\": true\n}" }
          }
        },
        {
          "name": "Eliminar Usuario",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/auth/users/2",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "Miembros",
      "item": [
        {
          "name": "Obtener Todos los Miembros",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/miembros",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Obtener Miembro por ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/miembros/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Crear Miembro",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/miembros",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"nombre\": \"Carlos\",\n  \"apellido\": \"Mendoza\",\n  \"email\": \"carlos.mendoza@email.com\",\n  \"telefono\": \"999888777\",\n  \"dni\": \"55667788\",\n  \"planId\": 1\n}" }
          }
        },
        {
          "name": "Actualizar Miembro",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/miembros/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"telefono\": \"911222333\",\n  \"estado\": \"ACTIVO\"\n}" }
          }
        },
        {
          "name": "Eliminar Miembro",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/miembros/3",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "Planes",
      "item": [
        {
          "name": "Obtener Todos los Planes",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/planes",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Obtener Planes Activos",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/planes?soloActivos=true",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Crear Plan",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/planes",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"nombre\": \"Plan Premium\",\n  \"descripcion\": \"Acceso completo + entrenador personal\",\n  \"precio\": 200.00,\n  \"duracionDias\": 30,\n  \"activo\": true\n}" }
          }
        },
        {
          "name": "Actualizar Plan",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/planes/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"precio\": 85.00,\n  \"activo\": true\n}" }
          }
        },
        {
          "name": "Eliminar Plan",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/planes/4",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "Asistencia",
      "item": [
        {
          "name": "Obtener Toda la Asistencia",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/asistencia",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Obtener Asistencia por Miembro",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/asistencia/miembro/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Registrar Entrada",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/asistencia/entrada",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"miembroId\": 1,\n  \"observacion\": \"Sesion de cardio\"\n}" }
          }
        },
        {
          "name": "Actualizar Asistencia (Salida)",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/asistencia/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"salida\": \"2026-03-15T18:30:00\",\n  \"observacion\": \"Sesion completada\"\n}" }
          }
        },
        {
          "name": "Eliminar Asistencia",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/asistencia/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "Pagos",
      "item": [
        {
          "name": "Obtener Todos los Pagos",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/pagos",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Obtener Pagos por Miembro",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/pagos/miembro/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Registrar Pago (dispara RabbitMQ)",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/pagos",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"miembroId\": 2,\n  \"planId\": 1,\n  \"monto\": 80.00,\n  \"metodoPago\": \"YAPE\",\n  \"notas\": \"Pago mensual plan basico\"\n}" }
          }
        },
        {
          "name": "Actualizar Estado de Pago",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/pagos/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"estado\": \"CONFIRMADO\",\n  \"notas\": \"Confirmado manualmente\"\n}" }
          }
        },
        {
          "name": "Eliminar Pago",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/pagos/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    }
  ]
}
